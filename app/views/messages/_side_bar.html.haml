.side-bar
  .side-bar__leftHeder
    .side-bar__leftHeder__box
      .side-bar__leftHeder__box__name
        = current_user.name
      .side-bar__leftHeder__box__btn
        .side-bar__leftHeder__box__btn__edit
          = link_to new_group_path do
            = icon( 'fas', 'edit')
        .side-bar__leftHeder__box__btn__cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side-bar__group
    - current_user.groups.each do |group|
      .side-bar__group__menber
        = link_to group_messages_path(group), class: "side-bar__group__menber__content"  do
          .side-bar__group__menber__content__list
            = group.name
          .side-bar__group__menber__content__message
            = group.show_last_message